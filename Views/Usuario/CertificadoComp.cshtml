@model ElOlivo.Models.certificadoComp

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">Certificado de Excelencia</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="certificado-preview">
        <!-- Encabezado estilo PDF -->
        <div class="certificado-header text-center mb-3">
            <h2 class="certificado-titulo">CERTIFICADO DE EXCELENCIA</h2>
            <p class="certificado-subtitulo">Reconocimiento Académico</p>
        </div>

        <!-- Mensaje principal estilo PDF -->
        <div class="certificado-mensaje text-center mb-4">
            <p class="mensaje-otorgamiento">Se otorga este reconocimiento a:</p>
            <h3 class="nombre-participante">@Model.NombreUsuario.ToUpper()</h3>
            <p class="mensaje-logro">Por completar exitosamente:</p>
            <h4 class="nombre-evento">@Model.EventoNombre</h4>
        </div>

        <!-- Línea decorativa -->
        <div class="linea-decorativa mb-3"></div>

        <!-- Información compacta en una sola tarjeta -->
        <div class="card certificado-info">
            <div class="card-header bg-light text-center">
                <h6 class="mb-0">INFORMACIÓN DEL PROGRAMA</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Sesión:</strong><br>
                        <span class="info-destacada">@Model.SesionTitulo</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Fecha:</strong><br>
                        <span class="info-destacada">@(Model.FechaInicioSesion?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <strong>Participante:</strong><br>
                        <span class="info-destacada">@Model.NombreUsuario</span>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <strong>Institución:</strong><br>
                        <span class="info-destacada">@Model.Institucion</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Estado:</strong><br>
                        <span class="badge bg-success">@Model.Estado</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Código de verificación -->
        <div class="codigo-verificacion text-center mt-3">
            <p class="mb-1">
                <strong>Código de verificación:</strong>
                <span class="codigo-unico">@Model.CodigoUnico</span>
            </p>
            <small class="text-muted">Emitido el @DateTime.Now.ToString("dd/MM/yyyy")</small>
        </div>

        <!-- Mensaje final -->
        <div class="mensaje-final text-center mt-3">
            <p class="text-success mb-1"><strong>¡Felicidades por tu logro!</strong></p>
            <small class="text-muted">Este certificado reconoce tu dedicación y excelencia académica</small>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
    <a href="@Url.Action("DescargarCertificado", new { id = Model.CertificadoId })"
       class="btn-descargar" target="_blank">
        <i class="fas fa-download"></i> Descargar PDF
    </a>
</div>

