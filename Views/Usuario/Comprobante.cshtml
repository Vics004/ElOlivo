@model ElOlivo.Models.comprobante

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">Comprobante de Inscripción</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="comprobante-preview text-center">
        <!-- Mensaje de éxito -->
        <div class="success-message mb-4">
            <div class="success-icon mb-3">
                <i class="fas fa-check-circle fa-4x text-success"></i>
            </div>
            <h3 class="text-success mb-3">Comprobante Creado Exitosamente</h3>
            <p class="text-muted">Tu comprobante de inscripción ha sido generado correctamente.</p>
            <p class="text-muted small">Código: @Model.CodigoComprobante</p>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
    <a href="@Url.Action("DescargarComprobante", new { id = Model.InscripcionId })"
       class="btn-descargar" target="_blank">
        <i class="fas fa-download"></i> Descargar PDF
    </a>
</div>

<style>
    /* === COMPROBANTE - Estilos específicos === */
    .comprobante-preview {
        font-family: 'Arial', sans-serif;
        line-height: 1.6;
        color: #555555;
        padding: 2rem 0;
    }

    .success-message {
        padding: 2rem;
    }

    .success-icon {
        animation: bounceIn 0.6s ease-in-out;
    }

    @@keyframes bounceIn {
        0% {
            transform: scale(0.3);
            opacity: 0;
        }

        50% {
            transform: scale(1.05);
            opacity: 1;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* === BOTONES PERSONALIZADOS === */
    /* Botón DESCARGAR - VERDE */
    .btn-descargar {
        background: linear-gradient(135deg, #4caf50 0%, #2d7a4f 100%) !important;
        color: #ffffff !important;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 6px rgba(76, 175, 80, 0.3);
        transition: all 0.3s ease;
    }

        .btn-descargar:hover {
            background: linear-gradient(135deg, #2d7a4f 0%, #1b5e3a 100%) !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(76, 175, 80, 0.4);
            color: #ffffff !important;
        }

    /* Botón CANCELAR - ROJO */
    .btn-cancelar {
        background: linear-gradient(135deg, #e53935 0%, #c62828 100%) !important;
        color: #ffffff !important;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 6px rgba(229, 57, 53, 0.3);
        transition: all 0.3s ease;
    }

        .btn-cancelar:hover {
            background: linear-gradient(135deg, #c62828 0%, #b71c1c 100%) !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(229, 57, 53, 0.4);
            color: #ffffff !important;
        }

    /* Modal header - VERDE */
    .modal-header {
        background: linear-gradient(135deg, #2d7a4f 0%, #1b5e3a 100%) !important;
        border-bottom: 3px solid #4caf50;
    }

        .modal-header .modal-title {
            color: #ffffff;
            font-weight: 700;
            font-size: 1.5rem;
        }
</style>