@* Views/Usuario/Inscripciones.cshtml *@

@model IEnumerable<dynamic>

@{
    Layout = "_Layout_Usuario";
    ViewData["Title"] = "Eventos Inscritos";
}

<h2 class="mb-3">Eventos Inscritos</h2>


@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No tienes inscripciones registradas.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Evento</th>
                <th>Descripción</th>
                <th>Fecha inicio</th>
                <th>Fecha fin</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inscripcion in Model)
            {
                <tr>
                    <td>@inscripcion.nombre</td>
                    <td>@inscripcion.descripcion</td>
                    <td>@(inscripcion.fecha_inicio?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>@(inscripcion.fecha_fin?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>@inscripcion.EstadoNombre</td>
                    <td>

                        <a asp-action="Ver_Mas" asp-route-id="@inscripcion.eventoid" class="btn btn-success btn-sm">
                            Ver más
                        </a>
                        
                        <button type="submit" class="btn btn-primary btn-sm">Comprobante</button>

                        @if (inscripcion.EstadoId != 1)
                        {
                            <form asp-action="CancelarInscripcion" method="post" style="display:inline" class="cancelar-form">
                                <input type="hidden" name="id" value="@inscripcion.inscripcionid" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancelar</button>
                            </form>
                            
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        document.querySelectorAll('.cancelar-form').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault(); // evita enviar el formulario automáticamente

                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "¿Quieres cancelar la inscripción?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, cancelar',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // enviar el formulario si confirma
                    }
                });
            });
        });
    </script>
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

