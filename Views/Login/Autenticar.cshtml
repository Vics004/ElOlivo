@{
    Layout = "_miLayout";
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
        
        <h1 style="color: #28a745; font-weight: bold; font-size: 4rem;" class="mb-5">El Olivo</h1>

       
        <div class="w-100" style="max-width: 500px;">
            <div class="p-4 border rounded" style="border-color: #b3cde0; background-color: #f8f9fa;">
                <form method="post" class="mt-2">
                    <div class="form-group">
                        <label for="txtUsuario" class="d-block fw-bold text-start" style="color: #004080;">Usuario</label>
                        @Html.TextBox("txtUsuario", "", new { @class = "form-control", style = "border-color: #a7c7e7;", placeholder = "Correo electrónico" })
                    </div>
                    <div class="form-group mt-3">
                        <label for="txtClave" class="d-block fw-bold text-start" style="color: #004080;">Contraseña</label>
                        @Html.Password("txtClave", "", new { @class = "form-control", style = "border-color: #a7c7e7;", placeholder = "**********" })
                    </div>
                    <button type="submit"
                            class="btn btn-lg mt-3"
                            style="background-color: #28a745; color: white; width: 100%; border: none;">
                        Iniciar sesión
                    </button>
                </form>
            </div>

           
            <div class="mt-3">
                <span style="color: gray;">¿Aún no estás registrado?</span>
                <a href="@Url.Action("Registro", "Usuario")" style="color: #28a745; font-weight: bold; cursor: pointer; text-decoration: none;">
                    ¡Regístrate ahora!
                </a>

            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert alert-danger mt-3" style="background-color: #f8d7da; border-color: #f5c6cb; color: #721c24;">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>
</div>
